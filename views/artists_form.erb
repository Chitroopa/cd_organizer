<h1>Add an Artist:</h1>

<form action="/artists" method="post">
  <div class="form-group">
    <label for="name">Artist name:</label>
    <input id="name" name="name" type="text" class="form-control">
  </div>
  <h3>Enter CD details</h3>
  <div class="form-group">
    <label for="title">CD title:</label>
    <input id="title" name="title" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="num-songs">Number of songs:</label>
    <input id="num-songs" name="num-songs" type="number" class="form-control">
  </div>
  <button type="submit" class="btn bg-primary">Add Artist</button>
</form>
